<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addTextName"
            android:layout_alignBottom="@+id/addTextName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:text="Exercise"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <EditText
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:id="@+id/addTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:hint="enter exercise"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addTextWeight"
            android:layout_alignBottom="@+id/addTextWeight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:text="Weight"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <EditText
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:id="@+id/addTextWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:hint="enter weight"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/setTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addTextSets"
            android:layout_alignBottom="@+id/addTextSets"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:text="Sets"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <EditText
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:id="@+id/addTextSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:hint="enter sets"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/RepsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addTextReps"
            android:layout_alignBottom="@+id/addTextReps"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:text="Reps"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <EditText
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:id="@+id/addTextReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="78dp"
            android:layout_marginRight="78dp"
            android:hint="enter reps"
            android:textColorHint="@color/colorAccent"
            android:inputType="number"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/CommentsTextView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Comments:"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/addTextComments"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:hint="enter here"
        android:gravity="start"
        android:inputType="text"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="13sp"
        android:background="@android:color/transparent"/>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

    <Button
        android:layout_alignParentTop="true"
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="save" />

    </RelativeLayout>



</LinearLayout>


